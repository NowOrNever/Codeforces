#include<cstdio>
#include<iostream>

using namespace std;

const int N = 100500;
int n, a[N], b[5];
int main ()
{
	cin >> n;

	for (int i = 1; i <= n; i ++ ) cin >> a[i];

	int l = 1, r = n;
	for (int i = 1; i <= n; i ++ ) {
		if (a[l] > a[r]) b[i%2] += a[l++];
		else b[i%2] += a[r--];
	}

	cout << b[1] << " " << b[0];

	return 0;
}
